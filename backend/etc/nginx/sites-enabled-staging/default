##
# Docker Config
##

server {
  listen 80;
  server_name staging.prosaurus.com;

  # Redirect HTTP to HTTPS
  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl;
  server_name staging.prosaurus.com;

  ssl_certificate /etc/letsencrypt/live/prosaurus.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/prosaurus.com/privkey.pem;

  # Proxy to Vite dev server
  location / {
    proxy_pass http://frontend:5173; 
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # WebSocket handling (for HMR)
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
  }

  # Proxy to Express app
  location /api/ {
    proxy_pass http://backend:3000;  # Your existing Express app
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # Proxy WebSocket connections
  location /wss/ {
    proxy_pass http://backend:3000;  # Backend WebSocket server (use HTTP internally)
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
  }
}

